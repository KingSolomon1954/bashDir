
# Read in our path helper functions
#
if [ -f ~/.bashdir/bash_pathfuncs ]; then
    . ~/.bashdir/bash_pathfuncs
fi

# Using appendToPath, if directories do not exist then the
# PATH is left untouched. Therefore all paths for all OS's and
# hosts can be handled here without special OS tests.

appendToPath   "/bin"
appendToPath   "/usr/bin"
appendToPath   "/usr/local/bin"
appendToPath   "/sbin"
appendToPath   "/usr/sbin"
appendToPath   "/usr/local/sbin"
appendToPath   "${HOME}/bin"
appendToPath   "${HOME}/pkg/jython2.7.0/bin"

appendToPath   "/opt/apache-maven-3.5.2/bin"
prependToPath  "/usr/local/opt/coreutils/libexec/gnubin"

deleteFromPath "/usr/games"
deleteFromPath "/usr/local/games"

appendToPath   "${HOME}/man"                 MANPATH
appendToPath   "${HOME}/info"                INFOPATH
appendToPath   "${HOME}/pkg/emacs-24.3/info" INFOPATH
